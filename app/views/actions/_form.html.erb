<%= form_with(model: [group, action]) do |f| %>
  <%= @action.name %>
  <%= @action.amount %>

  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :amount, style: "display: block" %>
    <%= f.text_field :amount %>
  </div>
  <div>
    <%= f.label :group_id %>
    <div class="category_select">
      <%= f.collection_check_boxes :group_ids, current_user.groups, :id, :name %>
    </div>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>